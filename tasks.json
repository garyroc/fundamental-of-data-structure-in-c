{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile",
      "command": "clang++",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe",
        "-g",
        "-Wall",
        "-static-libgcc",
        "-fcolor-diagnostics",
        "--target=x86_64-w64-mingw",
        "-std=c++20"
