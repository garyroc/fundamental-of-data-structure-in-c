{
  "tasks": [
      {
          "type": "shell",
          "label": "C/C++: clang++.exe build active file",
          "command": "C:\\LLVM\\bin\\clang++.exe",
          "args": [
              "-g",
              "${file}",
              "-o",
              "${fileDirname}\\${fileBasenameNoExtension}.exe",
              "-static-libgcc",
              "-Wall",
              "--target=x86_64-w64-mingw"
          ],
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "problemMatcher": [
              "$gcc"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          }
      }
  ],
  "version": "2.0.0"
}